<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lakshit.primeapplication.PrimeActivity"
    tools:showIn="@layout/activity_prime"
    android:background="#020202"
    tools:ignore="Overdraw">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:id="@+id/true_button"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/next_button"
        android:layout_marginEnd="56dp"
        android:drawableEnd="@mipmap/arrow_up" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no"
        android:id="@+id/false_button"
        android:layout_above="@+id/next_button"
        android:layout_alignStart="@+id/next_button"
        android:layout_marginStart="61dp"
        android:drawableEnd="@mipmap/arrow_down"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/next_button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/true_button"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@mipmap/arrow_next"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ques_textView"
        android:layout_marginBottom="40dp"
        android:textColor="#fcf9f9"
        android:textSize="@dimen/design_navigation_icon_size"
        android:layout_above="@+id/true_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:id="@+id/hint_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheat"
        android:id="@+id/cheat_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
